@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--sky-50: #dff4fd;
	--sky-100: #b5e4f9;
	--sky-200: #8bd4f5;
	--sky-300: #62c5f1;
	--sky-400: #38b5ed;
	--sky-500: #0ea5e9;
	--sky-600: #0c87bf;
	--sky-700: #096a95;
	--sky-800: #074c6b;
	--sky-900: #042e41;
	--gray-50: #e7eaee;
	--gray-100: #cdd2da;
	--gray-200: #b3bbc6;
	--gray-300: #98a3b3;
	--gray-400: #7e8c9f;
	--gray-500: #64748b;
	--gray-600: #515e71;
	--gray-700: #3f4957;
	--gray-800: #2c333d;
	--gray-900: #191d23;
	--font-stack: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
		Bitstream Vera Sans Mono, Courier New, monospace, serif;
	--font-mono: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
		Bitstream Vera Sans Mono, Courier New, monospace, serif;
	--font-color: var(--gray-700);
	--background-color: #ffffff;
	--page-width: 920px;
	--page-space: 1rem;
}

body {
	color: var(--font-color);
	background-color: var(--background-color);
}

body {
	padding: 0;
	margin: 0;
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-ms-flex-direction: column;
	flex-direction: column;
}

.main {
	-webkit-box-flex: 1;
	-ms-flex-positive: 1;
	flex-grow: 1;
	position: relative;
	overflow: hidden;
}

.layer {
	position: absolute;
	top: 0;
	bottom: 0;
	right: 0;
	left: 0;
	overflow-x: hidden;
	overflow-y: auto;
}
.layer.center {
	display: grid;
	place-content: center;
}
@keyframes circle-in-center {
	from {
		clip-path: circle(0%);
	}
	to {
		clip-path: circle(125%);
	}
}

.layer.nwp {
	animation: 1.5s cubic-bezier(0.25, 1, 0.3, 1) circle-in-center both;
	animation-delay: 0.1s;
}
.ocean {
	background-image: url('data:image/png;base64,');
}
.content {
	width: var(--page-width);
	max-width: 100%;
	margin-left: auto;
	margin-right: auto;
	padding: var(--page-space);
}
.bg-sky {
	background: linear-gradient(
		135deg,
		rgba(30, 87, 153, 1) 0%,
		rgba(89, 148, 202, 1) 62%,
		rgba(95, 154, 207, 0.7) 68%,
		rgba(125, 185, 232, 0) 100%
	);
}
.bg-fog {
	background: linear-gradient(
		to bottom,
		rgba(0, 0, 0, 0.45) 0%,
		rgba(0, 0, 0, 0) 100%
	);
}

.bgBuilding {
	width: var(--w, 80px);
	height: var(--h, 260px);
	animation: 2.5s cubic-bezier(0.25, 1, 0.3, 1) wipe-in-up both;
}
@keyframes wipe-in-up {
	from {
		clip-path: inset(100% 0 0 0);
	}
	to {
		clip-path: inset(0 0 0 0);
	}
}

.nwp-header {
	@apply py-8 space-y-4;
}
.nwp-header h1 {
	@apply text-5xl font-bold;
}
.nwp-header h4 {
	@apply text-2xl italic text-neutral-500;
}
.nwp-header h3 {
	@apply text-3xl font-bold;
}
.nwp-header h5 {
	@apply text-xl italic text-neutral-500;
}

.island1 {
	position: absolute;
	bottom: 0px;
	left: 0px;
	width: 384px;
	height: 256px;
}

.island2 {
	position: absolute;
	top: 0px;
	right: 0px;
	width: 384px;
	height: 192px;
}
.tile {
	--sz: 64px;
	--sx: -64px;
	--sy: -64px;
	--tx: 0px;
	--ty: 0px;
	--img: url('/img/islandTile.png');
	background-image: var(--img);
	background-repeat: no-repeat;
	display: block;
	position: absolute;
	left: 0;
	top: 0;
	transform: translate(var(--tx), var(--ty));
	overflow: hidden;
	width: var(--sz);
	height: var(--sz);
	background-position: var(--sx) var(--sy);
	transition: opacity 2s ease-in-out;
}

.tile.landing {
	opacity: 0;
}

.ship {
	width: 64px;
	height: 64px;
	background-color: rgba(0, 21, 128, 0.344);
	position: absolute;
	transition: all 0.3s ease;
	background-image: url('https://nwp-cgn.de/studio/upload/kat13/server/php/files/sails2.png');
	background-repeat: no-repeat;
	background-size: contain;
	background-position: center;
	border-radius: 100%;
	transform: rotate(var(--rot, 90deg));
}
